    <section id="section4" class="example p-4 mt-5">
      <h2 class="mb-4">üìñ Story Completion</h2>
      <!-- Input and Button -->
    <div class="input-section">
    <label for="storyPrompt">Enter the beginning of your story:</label>
    <input type="text"  class="form-control bg-dark text-light" id="storyPrompt" placeholder="Once there was.." />
    <button class="btn-custom mt-3 w-100" id="generateStoryBtn">Generate Story</button>
    </div>

  <!-- Display Generated Story -->
  <div id="generatedStory" class="story-output p-4 bg-dark rounded">
    <p>Your generated story will appear here...</p>
  </div>
