    </div>
  </section>

    <!-- Example Sections -->
  <main class="container py-5">
    <!-- Section 2: Example 1: AI Prediction -->
    <section id="section2" class="example p-4">
      <h2 class="mb-4">üîÆ Prediction Engine</h2>
      <div class="row align-items-center g-5">
        <div class="col-md-6 text-center">
          <img src="images/magic-ball.png" class="fortune-teller-image" alt="AI Prediction">
        </div>
        <div class="col-md-6">
          <button class="btn-custom w-100 py-3" id="predictionButton">
            Generate Prediction
          </button>
          <div class="mt-4 p-3 bg-dark rounded" id="predictionText">
            Your AI-generated prediction will appear here...
          </div>
        </div>
      </div>
    </section>

    <!-- Section 3: Example 2:  Question Answering -->
    <section id="section3" class="example p-4 mt-5">
      <h2 class="mb-4">‚ùì Question Answering</h2>
      <div class="content-container">
        <!-- User Input Section -->
        <div class="input-div mb-4">
          <label for="userQuestion" class="form-label">Enter your short question:</label>
          <input
            type="text"
            id="userQuestion"
            class="form-control form-control-lg bg-dark text-light"
            placeholder="Type your question here..."
          />
          <button class="btn-custom mt-3 w-100" id="getAnswersButton">
            Analyze Question
          </button>
        </div>

    <!-- Answer Cards Section -->
          <div class="answers-div row g-4">
          <!-- Answer 1 -->
          <div class="col">
            <div class="answer-card p-3 rounded h-100" id="answer1">
              <h3 class="text-accent">Answer 1 (Model GODEL-v1)</h3>
              <p class="answer-text text-muted">Loading...</p>
            </div>
          </div>

          <!-- Answer 2 -->
          <div class="col">
            <div class="answer-card p-3 rounded h-100" id="answer2">
              <h3 class="text-accent">Answer 2 (Model blenderbot-3B)</h3>
              <p class="answer-text text-muted">Loading...</p>
            </div>
          </div>

          <!-- Answer 3 -->
          <div class="col">
            <div class="answer-card p-3 rounded h-100" id="answer3">
              <h3 class="text-accent">Answer 3 (Model DialoGPT2-medium)</h3>
              <p class="answer-text text-muted">Loading...</p>
            </div>
          </div>

          <!-- Answer 4 -->
          <div class="col">
            <div class="answer-card p-3 rounded h-100" id="answer4">
              <h3 class="text-accent">Answer 4 (Model distilgpt2)</h3>
              <p class="answer-text text-muted">Loading...</p>
            </div>
          </div>
        </div>
      </div>
    </section>

