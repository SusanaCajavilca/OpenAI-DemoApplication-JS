<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  
  <link rel="stylesheet" href="/stylesheets/style.css"> <!-- Linking css file -->
</head>
<body>

  <!-- Header Section -->
  <header>
    <div class="header-left">
      <img src="" alt="Logo" class="logo"> <!-- Placeholder logo icon -->
    </div>
    <nav class="header-right">
      <ul>
        <li><a href="#section2">Example 1</a></li>
        <li><a href="#section3">Example 2</a></li>
        <li><a href="#section4">Example 3</a></li>
      </ul>
    </nav>
  </header>

  <!-- Main Content -->
  <main>

    <!-- Section 1: Masthead and H1 -->
    <section id="section1" class="masthead">
      <div>
      <h1>Open AI - Hugging Face</h1>
      </div>
    </section>

    <!-- Section 2: Example 1 -->
    <section id="section2" class="example">
      <h2>Example 1: Prediction (No User Input)</h2>
       <div class="content-container">
    <!-- First div: Button to trigger prediction -->
    <div class="button-div">
      <button id="predictionButton">Click me to get a prediction</button>
    </div>

    <!-- Second div: Image of fortune teller and prediction text -->
    <div class="fortune-teller-div">
      <img src="" alt="Fortune Teller" class="fortune-teller-image">
      <p id="predictionText">Your prediction will appear here...</p>
    </div>
  </div>
    </section>

    <!-- Section 3: Example 2 -->
    <section id="section3" class="example">
      <h2>Example 2: Answering a Question (User Input)</h2>
      <div class="content-container">
    
    <!-- First div: User input question and button -->
    <div class="input-div">
      <label for="userQuestion">Enter your short question:</label>
      <input type="text" id="userQuestion" placeholder="Type your question here...">
      <button id="getAnswersButton">Get answers</button>
    </div>

    <!-- Second div: Display answers from different models -->
    <div class="answers-div">
      <div class="answer" id="answer1">
        <h3>Answer 1 (Model GODEL-v1)</h3>
        <p class="answer-text">Loading...</p>
      </div>
      <div class="answer" id="answer2">
        <h3>Answer 2 (Model blenderbot-3B)</h3>
        <p class="answer-text">Loading...</p>
      </div>
      <div class="answer" id="answer3">
        <h3>Answer 3 (Model DialoGPT2-medium)</h3>
        <p class="answer-text">Loading...</p>
      </div>
      <div class="answer" id="answer4">
        <h3>Answer 4 (Model gemma-2-2b-it)</h3>
        <p class="answer-text">Loading...</p>
      </div>
    </div>
  </div>
    </section>

    <!-- Section 4: Example 3 -->
    <section id="section4" class="example">
      <h2>Example 3: Story Completion (User Input)</h2>
      <!-- Input and Button -->
    <div class="input-section">
    <label for="storyPrompt">Enter the beginning of your story:</label>
    <input type="text" id="storyPrompt" placeholder="Once there was.." />
    <button id="generateStoryBtn">Generate Story</button>
    </div>

  <!-- Display Generated Story -->
  <div id="generatedStory" class="story-output">
    <p>Once you click "Generate Story", the story will appear here.</p>
  </div>
    </section>

  </main>

  <!-- Footer Section -->
  <footer>
    <div class="footer-left">
      <img src="" alt="Left Icon"> <!-- Left footer icon -->
    </div>
    <div class="footer-right">
